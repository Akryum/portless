    "consola": "^2.11.3",
    "fs-extra": "^8.1.0",
    "greenlock": "^4.0.3",
    "http-proxy": "^1.18.0",
    "ngrok": "^3.2.7",
    "pac-proxy-agent": "^3.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/http-proxy": "^1.17.2",
    "@types/jest": "^22.2.3",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.4.3"
  },
  "files": [
    "dist/**/*",
    "templates/**/*"
