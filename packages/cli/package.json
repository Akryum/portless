{
  "name": "@portless/cli",
  "version": "0.1.0",
  "description": "Easy local domains and reverse proxy with HTTPS support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Guillaume Chau",
  "license": "MIT",
  "keywords": [
    "https",
    "localhost"
  ],
  "publishConfig": {
